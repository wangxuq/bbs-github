<p></p><p></p>
<%if(post.comments){
	post.comments.forEach(function(comment,index){ %>
	<div style="padding-left:4em">
		<p><img src="<%=comment.head%>" class="l_head" />
		<a href="<%=comment.website%>"><%=comment.name%></a>
		<span class="info">回复于<%=comment.time%></span>
	    </p>
	</div>
	<div style="padding-left:4em"><p><%-comment.content%></p></div>
<%})}%>
<br/><br/>
<form method="post">
<fieldset>
	<legend>我要留言</legend>
		<%if(user){%>
			<div class="control-group">
				<label class="control-label" for="name">姓名</label>
				<div class="controls">
					<input type="text" class="input-xlarge" id="name" name="name" value="<%=user.name%>"/>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="email">邮箱</label>
				<div class="controls">
					<input type="text" class="input-xlarge" id="email" name="email" value="<%=user.email%>" />
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="website">网址</label>
				<div class="controls">
					<input type="text" class="input-xlarge" id="website" name="website" value="http://" />
				</div>
			</div>
		<%}else{%>
			<div class="control-group">
				<label class="control-label" for="name">姓名</label>
				<div class="controls">
					<input type="text" class="input-xlarge" id="name" name="name"  />
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="email">邮箱</label>
				<div class="controls">
					<input type="text" class="input-xlarge" id="email" name="email" />
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="website">网址</label>
				<div class="controls">
					<input type="text" class="input-xlarge" id="website" name="website" value="http://" />
				</div>
			</div>
		<%}%>
		<div class="control-group">
				<label class="control-label" for="content">内容</label>
				<div class="controls">
					<textArea type="text" id="content" name="content" rows="5" cols="100"></textArea>
				</div>
		</div>
		<div class="form-actions">
		<button class="btn btn-primary">留言</button>
		</div>
</fieldset>
</form>
