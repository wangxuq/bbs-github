<%include header.ejs%>
	<%if(!user){%>
		<div class="hero-unit">
			<h1>欢迎来到bbs</h1>
			<p>bbs是一个基于nodejs的论坛</p>
			<p>
				<a class="btn btn-primary btn-large" href="/login">登录</a>
				<a class="btn btn-large" href="/reg">立即注册</a>
			</p>
		</div>
	<%}%>
    <div class="post">
		<% posts.forEach(function(post,index){ %>
			<p><h2><a href="/u/<%=post.name%>/<%=post.time.day%>/<%=post.title%>"><%=post.title%></a></h2></p>
			<a href="/u/<%=post.name%>"><img src="<%=post.head%>" class="r_head"></a>
				<p class="info">
					作者：<a href="/u/<%=post.name%>"><%=post.name%></a> |
					日期: <%=post.time.minute%> |
					标签：<%if(post.tags){%>
							<%post.tags.forEach(function(tag,index){ %>
									<%if(tag.tag){%>
										<a class="tag" href="/tags/<%=tag.tag%>"><%=tag.tag%></a>
									<%}%>
							<%});%>
						  <%}%>
				</p>
				<p><%-post.post%></p>
		        <p class="info">
					阅读：<%=post.pv%> |
					评论：<%=post.comments.length%>
				</p>
				------------------------------------------------------------
		<%}); %>
    </div>

<%include footer.ejs%>
