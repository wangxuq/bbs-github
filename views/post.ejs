<%include header.ejs%>
<form class="form-horizontal" method="post">
	<fieldset>
		<legend>发表文章</legend>
		<div class="control-group">
			<label class="control-label" for="title">标题</label>
			<div class="controls">
				<input type="text"  name="title" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="tag">标签</label>
			<div class="controls">
				<input type="text"  name="tag1" />
				<input type="text"  name="tag2" />
				<input type="text"  name="tag3" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="post">内容</label>
			<div class="controls">
				<textArea type="text" id="post" name="post" rows="5" cols="100"></textArea>
			</div>
		</div>
		<div class="form-actions">
			<button class="btn btn-primary">提交</button>
		</div>
	</fieldset>
</form>
<%include footer.ejs%>